{
  "name": "smite-orchestrator",
  "description": "SMITE Orchestrator - Multi-agent coordination and workflow management",
  "version": "1.0.0",
  "author": {
    "name": "Pamacea"
  },
  "hooks": {
    "SessionStart": [
      {
        "command": "node",
        "args": ["plugins/smite-orchestrator/dist/session-init.js"]
      }
    ],
    "PostToolUse": [
      {
        "toolName": "Write",
        "command": "node",
        "args": ["plugins/smite-orchestrator/dist/track-artifacts.js", "{{context.toolResult.filePath}}", "{{context.activeAgent}}"]
      },
      {
        "toolName": "Write",
        "command": "node",
        "args": ["plugins/smite-orchestrator/dist/detect-debt.js", "file", "{{context.toolResult.filePath}}"]
      }
    ],
    "SubagentStop": [
      {
        "command": "node",
        "args": ["plugins/smite-orchestrator/dist/agent-complete.js", "{{context.agentName}}"]
      }
    ],
    "UserPromptSubmit": [
      {
        "command": "node",
        "args": ["plugins/smite-orchestrator/dist/suggest-display.js"]
      }
    ]
  }
}
